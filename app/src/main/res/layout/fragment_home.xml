<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="25dp"
            android:text="Halifax"
            android:textColor="@color/black" />

        <LinearLayout
            android:layout_width="0mm"
            android:layout_height="48dp"
            android:layout_marginStart="10dp"
            android:layout_weight="1"
            android:background="@drawable/shape_search_bg"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_search"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@null"
                android:paddingHorizontal="15dp"
                android:textColor="@color/black"
                android:textSize="18dp"
                tools:text="ttt" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:layout_marginVertical="8dp"
                android:background="@color/black" />

            <ImageView
                android:id="@+id/iv_search"
                android:layout_width="52dp"
                android:layout_height="32dp"
                android:paddingHorizontal="10dp"
                android:src="@mipmap/icon_serach" />
        </LinearLayout>

        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="52dp"
            android:layout_height="32dp"
            android:paddingHorizontal="10dp"
            android:src="@mipmap/icon_location" />
    </LinearLayout>

    <View
        android:id="@+id/v_line1"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="5dp"
        android:layout_marginTop="12dp"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/ll_filter1"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="0mm"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableStart="@mipmap/icon_home"
            android:gravity="center"
            android:text="Rent a house"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_apartment"
            android:layout_width="0mm"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:drawableStart="@mipmap/icon_home"
            android:gravity="center"
            android:text="Rent an apartment"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:id="@+id/v_line2"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="5dp"
        android:background="@color/black" />

    <LinearLayout
        android:id="@+id/ll_filter2"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginHorizontal="5dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_contact"
            android:layout_width="0mm"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:drawableStart="@mipmap/icon_contact"
            android:gravity="center"
            android:text="Find a roommate"
            android:textColor="@color/black"
            android:textSize="15sp" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/black" />

        <TextView
            android:id="@+id/tv_smile"
            android:layout_width="0mm"
            android:layout_height="match_parent"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:drawableStart="@mipmap/icon_smile"
            android:gravity="center"
            android:text="Unwanted furniture"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </LinearLayout>

    <View
        android:id="@+id/v_line3"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginHorizontal="5dp"
        android:background="@color/black" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_weight="1" />

    <View
        android:layout_width="match_parent"
        android:layout_height="100dp" />
</LinearLayout>